<body class="display">

<div class="container">
   <div class="row headings">
    <div class="col headingstyle">
      Weather Details
    </div>
  </div>
  <div class="row">
    <div class="col colstyle">
      Temperature : {{temp}}°F
    </div>
  </div>
  <div class="row">
    <div class="col colstyle">
      But it feels like {{atemp}}°F !!
    </div>
  </div>
  <div class="row">
    <div class="col colstyle">
      Humidity : {{hum}}
    </div>
  </div>
  <div class="row">
    <div class="col colstyle">
      Precipitation : {{precipitation}}
    </div>
  </div>
  <div class="row">
    <div class="col colstyle">
      WindSpeed : {{windspeed}}
    </div>
  </div>
  <br>
  <div class="row">
    <p><a href="/"><button type="submit" class="btn btn-primary">Home</button></a></p>
  </div>
</div>




